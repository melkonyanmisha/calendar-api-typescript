{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "paths": {
      "*": [
        "node_modules/*",
        ".idea/*"
      ]
    },
  },
  "include": [
    "app.ts",
    "src/**/*"
  ]
}